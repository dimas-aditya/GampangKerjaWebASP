﻿@{ ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@using HCMSSMI.ViewModels

@model UserAuthViewModel
<!doctype html>
<html class="no-js" lang="zxx">


<body class="template-color-1">
    <br />    <br />    <br />
    <div id="main-wrapper">
        <!-- Login Register Section Start -->
        <div class="login-register-section section bg_color--5 pb-120 pb-lg-100 pb-md-80 pb-sm-60 pb-xs-50">
            <div class="container">
                <div class="row no-gutters">

                    <div class="col-lg-4">
                        <div class="login-register-form-area">
                            <div class="login-tab-menu">
                                <ul class="nav">
                                    <li><a class="active show" data-toggle="tab" href="#login">Login</a></li>
                                    <li><a data-toggle="tab" href="#register">Register</a></li>
                                </ul>
                            </div>
                            <div class="tab-content">
                                <div id="login" class="tab-pane fade show active">
                                    <div class="login-register-form">
                                        <form action="@Url.Action("Login", "Home")" method="POST" id="login-form">
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                            @Html.AntiForgeryToken()
                                            <p>Login to Jotopa with your registered account</p>
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="single-input">
                                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @required = "required", @placeholder = "Enter your username..." })
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="single-input">
                                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @required = "required", @placeholder = "Enter your password..." })
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="checkbox-input">
                                                        <input type="checkbox" name="login-form-remember" id="login-form-remember">
                                                        <label for="login-form-remember">Remember me</label>
                                                    </div>
                                                </div>
                                                <div class="col-12 mb-25"><button class="ht-btn">Login</button></div>
                                            </div>
                                        </form>
                                        <div class="divider">
                                            <span class="line"></span>
                                            <span class="circle">or login with</span>
                                        </div>
                                        <div class="social-login">
                                            <ul class="social-icon">
                                                <li><a class="facebook" href="#"><i class="fab fa-facebook"></i></a></li>
                                                <li><a class="twitter" href="#"><i class="fab fa-twitter"></i></a></li>
                                                <li><a class="linkedin" href="#"><i class="fab fa-linkedin"></i></a></li>
                                                <li><a class="google" href="#"><i class="fab fa-google-plus"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div id="register" class="tab-pane fade">
                                    <div class="login-register-form">
                                        <form action="@Url.Action("Registration", "Home")" method="POST" id="registration-form">
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                            @Html.AntiForgeryToken()
                                            <p>Create Your account</p>
                                            <div class="row row-5">
                                                <div class="col-12">
                                                    <div class="single-input">
                                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @required = "required", @placeholder = "Enter your username..." })
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="single-input">
                                                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @required = "required", @placeholder = "Enter your name..." })
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="single-input">
                                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "required", @placeholder = "Enter your email...", @type = "email" })
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="single-input">
                                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @required = "required", @placeholder = "Enter your password..." })
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="single-input">
                                                        @Html.DropDownListFor(model => model.RoleID, new SelectList(ViewBag.UserRoleList, "ID", "Name"), new {  @required = "required" })
                                                    </div>
                                                </div>
                                                
                                                <div class="col-12">
                                                    <div class="register-account">
                                                        <input id="register-terms-conditions" type="checkbox" class="checkbox" checked="" required="">
                                                        <label for="register-terms-conditions">I read and agree to the <a href="#">Terms &amp; Conditions</a> and <a href="#">Privacy Policy</a></label>
                                                    </div>
                                                </div>
                                                <div class="col-12 mb-25"><button class="ht-btn">Register</button></div>
                                            </div>
                                        </form>
                                        <div class="divider">
                                            <span class="line"></span>
                                            <span class="circle">or login with</span>
                                        </div>
                                        <div class="social-login">
